{% set image = image ?? null %}
{% set position = position ?? 0 %}
{% set ratio = ratio ?? true %}
{% set caption = caption ?? null %}

<div class="grid s-pad-bottom-2 m-pad-bottom-4">
    <div class="s-col-8 s-off-{{ position }}">
        {% include '/components/image/image' with { asset: image, ratio: ratio } only %}
        {% if caption %}
            {% include '/components/caption/caption' with { text: caption } only %}
        {% endif %}
    </div>
</div>
