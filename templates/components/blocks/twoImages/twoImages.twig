{% set leftImage = leftImage ?? null %}
{% set leftImageCaption = leftImageCaption ?? null %}
{% set rightImage = rightImage ?? null %}
{% set rightImageCaption = rightImageCaption ?? null %}
{% set offset = offset ?? false %}
{% set leftMagnifiedImage = leftMagnifiedImage ?? null %}
{% set rightMagnifiedImage = rightMagnifiedImage ?? null %}

<div class="grid s-pad-bottom-2 m-pad-bottom-6">
    <div class="s-col-6 m-col-5 m-off-1">
        {% if leftMagnifiedImage %}
            {% include '/components/magnifier/magnifier' with { image: leftImage, magnifiedImage: leftMagnifiedImage, ratio: 1.5 } only %}
        {% else %}
            {% include '/components/image/image' with { asset: leftImage, ratio: 1.5 } only %}
        {% endif %}
        {% if leftImageCaption %}
            {% include '/components/caption/caption' with { 'text': leftImageCaption } only %}
        {% endif %}
    </div>
    <div class="s-col-6 m-col-5 {{ offset ? 's-pad-top-3 l-pad-top-5' }}">
        {% if leftMagnifiedImage %}
            {% include '/components/magnifier/magnifier' with { image: rightImage, magnifiedImage: rightMagnifiedImage, ratio: 1.5 } only %}
        {% else %}
            {% include '/components/image/image' with { asset: rightImage, ratio: 1.5 } only %}
        {% endif %}
        {% if rightImageCaption %}
            {% include '/components/caption/caption' with { text: rightImageCaption } only %}
        {% endif %}
    </div>
</div>
