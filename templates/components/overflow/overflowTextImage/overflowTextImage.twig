{% set position = block.imagePosition.value %}


<div class="overflow grid {{ position }} s-pad-bottom-2 m-pad-bottom-4 s-gap-bottom-half">
    <div class="overflow__item m-col-8 s-col-12 {{ block.textSize.value }} {% if position == 'overflow--reverse' %}overflow__item--right{% endif %}">
       {{ block.copy }}
    </div>
    <div class="overflow__item m-col-8 s-col-12 {% if position == '' %} overflow__item--right{% endif %}">
        {% include '/components/image/image' with { asset: block.file.one() } only %}
    </div>
</div>

